<header class="relative flex flex-col items-center justify-center h-auto border-b border-black bg-<%= bg_color %> text-center gap-20 px-8 pt-16 pb-20 md:pt-20 md:pb-24 lg:pt-28 lg:pb-36">
  <div class="flex flex-col max-w-screen-sm gap-8 lg:gap-10 lg:max-w-screen-md">
    <% if local_assigns[:subtitle].present? %>
      <div class="text-xl md:text-2xl"><%== subtitle %></div>
    <% end %>
    <% if local_assigns[:title].present? %>
      <h1 class="text-5xl font-medium md:text-6xl md:leading-[0.9] lg:text-8xl"><%== title %></h1>
    <% end %>
    <% if local_assigns[:description].present? %>
      <div class="text-xl md:text-2xl"><%== description %></div>
    <% end %>
  </div>
  <%= yield %>
</header>
