<div class="w-full flex flex-col border-b border-black bg-pink py-16 lg:flex-row">
  <div class="flex items-center justify-center mb-16 lg:mb-0 lg:w-1/2">
    <div class="relative flex flex-col items-center justify-center">
      <img
        src="<%= image_url %>"
        alt="<%= name %> portrait"
        class="w-full max-w-xs lg:max-w-sm xl:max-w-xl"
      >
      <a
        href="<%= profile_url %>"
        class="absolute flex items-center gap-2 bg-white pl-1 pr-3 py-1 rounded-full border border-black no-underline bottom-4 -left-2 md:bottom-8 md:-left-4 lg:bottom-10 lg:left-4 xl:bottom-16 xl:left-12 transition-all duration-200 ease-in-out hover:-translate-x-1 hover:-translate-y-1 hover:shadow-[3px_3px_#000]"
      >
        <img
          src="<%= image_path("logo-g.svg") %>"
          alt="Gumroad icon"
          class="w-9 h-9"
        >
        <span class="text-lg font-medium"><%= username %></span>
      </a>
    </div>
  </div>
  <div class="px-8 text-left mx-auto flex items-center justify-start md:px-24 md:text-center lg:w-1/2 lg:text-left">
    <div class="max-w-xl grid !gap-y-10 md:max-w-2xl lg:max-w-3xl">
      <h2 class="text-2xl md:text-3xl lg:text-4xl">
        "<%= quote %>"
      </h2>
      <div class="text-xl font-bold">
        <%= name %> sells <%= product_type %>
      </div>
    </div>
  </div>
</div>
