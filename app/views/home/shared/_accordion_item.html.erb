<div class="accordion-item">
  <div class="flex justify-between items-center py-6 sm:py-12 md:py-16 border-t border-black cursor-pointer" data-accordion-trigger>
    <div class="flex items-center w-full gap-[4vw] md:gap-[12vw]">
      <div class="w-12 h-12 flex-shrink-0 flex items-center justify-center">
        <svg width="48" height="48" viewBox="0 0 32 32">
          <line x1="8" y1="16" x2="24" y2="16" stroke="black" stroke-width="2"/>
          <line x1="16" y1="8" x2="16" y2="24" stroke="black" stroke-width="2" class="transition-transform duration-300"/>
        </svg>
      </div>
      <h3 class="text-2xl md:text-4xl font-medium"><%= title %></h3>
    </div>
  </div>

  <div class="overflow-hidden transition-all duration-300 max-h-0" data-accordion-content>
    <div class="pl-[calc(3rem+4vw)] md:pl-[calc(3rem+12vw)] pb-16">
      <p class="text-xl md:text-2xl max-w-6xl">
        <%= content.html_safe %>
      </p>
    </div>
  </div>
</div>
