staging: &staging
  account_email: "staging-service-letsencrypt@gumroad.com"
  acme_url: "https://acme-v02.api.letsencrypt.org/directory"
  invalid_domain_cache_expires_in: <%= 8.hours %>
  max_retries: 10
  nginx_sync_duration: <%= 30.seconds %>
  rate_limit: 300 # 300 new certificate orders per account per 3 hours - https://letsencrypt.org/docs/rate-limits/
  rate_limit_hours: <%= 3.hours %>
  renew_in: <%= 75.days %>
  sleep_duration: <%= 2.seconds %>
  ssl_env: staging

production:
  <<: *staging
  ssl_env: production
  account_email: "service-letsencrypt@gumroad.com"
